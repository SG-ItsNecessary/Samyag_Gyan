/* Layout - HORIZONTAL SIDE-BY-SIDE */
.main-app-wrapper {
  max-width:1200px; margin:1rem auto 0 auto; display:flex; flex-direction:row;
  gap:1.5rem; flex-wrap:nowrap; align-items:stretch;
